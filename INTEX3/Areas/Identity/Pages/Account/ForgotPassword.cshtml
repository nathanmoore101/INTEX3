@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>

<body class="d-flex flex-column min-vh-100">
    <div class="container">
        <div class="rectangle">
            <div class="main">
                
<h1>@ViewData["Title"]</h1>
                <hr style="height: 5px; color: black; opacity: 1;" />
<h5>Enter your email.</h5>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3" style="margin-left: auto; margin-right: auto;">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary" style="margin-left: auto; margin-right: auto;">Reset Password</button>
        </form>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>