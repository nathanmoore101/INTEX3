@{
    ViewData["Title"] = "Admin Users";
}


<head>
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<h1>Admin Database</h1>


<body>


    <div class="d-flex justify-content-center container-fluid" style="padding: 10px; text-align: center">
        <a class="btn btn-light" role="button" style="width: 200px; margin: 0 10px;" asp-area="" asp-controller="Home" asp-action="AdminOrdersPage">REVIEW ORDERS</a>
        <a class="btn btn-light" role="button" style="width: 200px; margin: 0 10px;" asp-area="" asp-controller="Home" asp-action="AdminProductsPage">PRODUCTS</a>
        <a class="btn btn-info" role="button" style="width: 200px; margin: 0 10px;" asp-area="" asp-controller="Home" asp-action="AdminUsersPage">USERS</a>
    </div>


    @model List<Customer> //UPDATE WITH CORRECT MODEL
    <main>
        <main>

            <div class="background">
                <div class="container">
                    <table class="table table-bordered bg-white">
                        <thead class="fw-bold">
                            <tr>
                                <td>Customer ID</td>
                                <td>First Name</td>
                                <td>Last Name</td>
                                <td>Birth Date</td>
                                <td>Country of Residence</td>
                                <td>Gender</td>
                                <td>Age</td>
                            </tr>
                        </thead>
                        @foreach (var x in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@x.CustomerId</td>
                                    <td>@x.FirstName</td>
                                    <td>@x.LastName</td>
                                    <td>@x.BirthDate</td>
                                    <td>@x.CountryOfResidence</td>
                                    <td>@x.Gender</td>
                                    <td>@x.Age</td>
                                </tr>
                            </tbody>
                        }
                    </table>
                </div>
            </div>
        </main>

    </main>

</body>