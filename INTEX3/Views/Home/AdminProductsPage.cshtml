@{
    ViewData["Title"] = "Products";
}

<head>
    <link rel="stylesheet" href="~/css/admin.css">
</head>


@model List<Product> //UPDATE WITH CORRECT MODEL



<div style="margin-top:5%">
    <nav class="d-flex justify-content-center container-fluid" style="padding: 10px; text-align: center">
        <h3 style="color:white; font-weight:600;">Products</h3>
        <a class="btn btn-outline-info" role="button" style="width: 200px; margin: 0 10px;" asp-area="" asp-controller="Home" asp-action="AdminOrdersPage">RECENT ORDERS</a>
        <a class="btn btn-info" role="button" style="width: 200px; margin: 0 10px;" asp-area="" asp-controller="Home" asp-action="AdminProductsPage">PRODUCTS</a>
        <a class="btn btn-outline-info" role="button" style="width: 200px; margin: 0 10px;" asp-area="" asp-controller="Home" asp-action="AdminCustomersPage">CUSTOMERS</a>
        <a class="btn btn-outline-info" role="button" style="width: 200px; margin: 0 10px;" asp-area="" asp-controller="Home" asp-action="AdminUsersPage">USERS</a>
        <a href="@Url.Action("AddProductPage", "Home")" class="btn btn-warning" style="width: 200px; margin: 0 10px;">Add a Product</a>
    </nav>
</div>


<main class="transactions-container">
    <div>
        <table class="table table-bordered bg-white" style="border-radius: 8px; overflow: hidden; margin-top: 10px;">
            <thead class="fw-bold">
                <tr>
                    <td>Product ID</td>
                    <td>Name</td>
                    <td>Year</td>
                    <td>Number of Parts</td>
                    <td>Price</td>
                    <td>Image Link</td>
                    <td>Primary Color</td>
                    <td>Secondary Color</td>
                    <td>Description</td>
                    <td>Category</td>
                    <td>Edit</td>
                    <td>Delete</td>
                </tr>


            </thead>


            @foreach (var x in Model)
            {
                <tbody>
                    <tr>
                        <td>@x.ProductId</td>
                        <td>@x.Name</td>
                        <td>@x.Year</td>
                        <td>@x.NumParts</td>
                        <td>@x.Price</td>
                        <td>@x.ImgLink</td>
                        <td>@x.PrimaryColor</td>
                        <td>@x.SecondaryColor</td>
                        <td>@x.Description</td>
                        <td>@x.Category</td>
                        <td><a class="btn btn-info" asp-controller="Home" asp-action="EditProductPage" asp-route-id="@x.ProductId">Edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="Home" asp-action="DeleteProductConfirmation" asp-route-id="@x.ProductId">Delete</a></td>
                    </tr>

                </tbody>
            }
        </table>
    </div>
</main>