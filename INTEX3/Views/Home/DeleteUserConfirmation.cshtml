@{
}
@model INTEX3.Models.AspNetUser

<h1>Delete User</h1>

<p>Are you sure you want to delete the following User?</p>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Username</th>
        <td>@Model.UserName</td>
    </tr>
    <!-- Add other properties as needed -->
</table>

<form method="post" action="@Url.Action("DeleteUserConfirmed", "Home", new { id = Model.Id })">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("AdminUsersPage", "Home")" class="btn btn-secondary">Cancel</a>
</form>
