<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="ProductListPage" asp-route-pageNum="">Home</a>

    @foreach (string pt in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(pt == ViewBag.SelectedProductColor ? "btn-primary" : "btn-outline-secondary")"
           asp-controller="Home"
           asp-action="ProductListPage"
           asp-route-productColor="@pt"
           asp-route-pageNum="1">
            @pt
        </a>
    }
</div>
